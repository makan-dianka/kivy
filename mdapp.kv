#: import FadeTransition kivy.uix.screenmanager.FadeTransition
    
ScreenManagement:
    transition: FadeTransition()
    HomeScreen:
    EuroScreen:
    FcfaScreen:
    FcfaxoaScreen:
    FcfaentierScreen:
    
<HomeScreen>:
    name: "home"
    
    GridLayout:
        padding: 100
        cols: 1
        rows: 7
        spacing: 20
        
        Label:
            text: "Appuyer sur un bouton pour faire votre conversion"
            color: 1, 1, 0, 1
            
        RoundedButton:
            text: "Euro"
            font_size: 30
            back_color: (48/255,84/255,150/255,1)
            on_release: app.root.current = "euro"
            
            
        RoundedButton:
            text: "Fcfa"
            font_size: 30
            back_color: (48/255,84/255,150/255,1)
            on_release: app.root.current = "fcfa"
            
        RoundedButton:
            text: "Fcfa Fcfa"
            font_size: 30
            back_color: (48/255,84/255,150/255,1)
            color: 1,0,0,1
            on_release: app.root.current = "xoa"
            
        RoundedButton:
            text: "Fcfa Euro"
            font_size: 30
            back_color: (48/255,84/255,150/255,1)
            color: 1,0,0,1
            on_release: app.root.current = "entier"
         
        Label:   
        Label:
            text: "MDPower @2021 | all right reserved"
            
<RoundedButton@Button>:
    background_color: 0,0,0,0
    background_normal: ''
    canvas.before:
        Color:
            rgba: (48/255,84/255,150/255,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [58]
            
    
<EuroScreen>:
    name: "euro"
    
    GridLayout:
        cols: 1
        rows: 13
    
        Label:
        Label:
            text: "Saisir Euro (â‚¬)\neuro ==> fcfa"
        
