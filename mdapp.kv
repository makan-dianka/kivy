            multiline: False
            size: 150, 50

            
        Label:
        Label:
            id: lbl
            font_size: 55
            color: 1, 1, 0, 1
            text: "650 Fcfa"
        
        Label: 
        RoundedButton:
            on_press: root.get_f()
